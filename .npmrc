# Registry configuration for better reliability
registry=https://registry.npmjs.org/
@typescript-eslint:registry=https://registry.npmjs.org/

# Retry configuration for network issues
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Timeout settings
fetch-timeout=300000

# Strict SSL (disable if needed for corporate networks)
strict-ssl=true

# Use legacy peer deps for better compatibility
legacy-peer-deps=true

# Enable progress bar for better debugging
progress=true

# Cache settings
cache=.npm-cache
prefer-offline=false
